<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên thiết bị"
            android:textSize="16sp"
            android:textColor="@color/textColorHeading"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên thiết bị"
            android:inputType="textCapSentences"
            android:padding="10dp"
            android:background="@drawable/bg_white_corner_16_border_gray"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_add_img"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Tải ảnh lên"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_button_enable_corner_16"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>


        <ImageView
            android:id="@+id/iv_device_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"/>

</LinearLayout>