<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".fragment.OnboardingFragment2">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:src="@drawable/onboarding2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhật nhanh chóng"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/textColorHeading"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tự động cập nhật trạng thái thiết bị và dịch vụ trong thời gian thực, giúp bạn luôn nắm bắt thông tin mới nhất và xử lý kịp thời."
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/textColorHeading"
        android:layout_marginTop="20dp"/>

</LinearLayout>